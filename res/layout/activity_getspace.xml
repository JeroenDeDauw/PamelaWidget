<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="8dp"
	android:paddingRight="8dp">

	<EditText android:id="@+id/search_box" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="type to filter"
		android:inputType="text" android:maxLines="1" />


	<ListView android:id="@id/android:list"
		android:cacheColorHint="#00000000" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

</LinearLayout>